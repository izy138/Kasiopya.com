<script>
(function() {
  'use strict';
  
  // CRITICAL: Set up resize listener FIRST, before any mobile checks
  // This ensures page reloads when crossing 750px threshold in either direction
  let wasDesktop = window.innerWidth >= 750;
  let reloadTimer;
  window.addEventListener('resize', function() {
    const isDesktop = window.innerWidth >= 750;
    if (isDesktop !== wasDesktop) {
      wasDesktop = isDesktop;
      clearTimeout(reloadTimer);
      reloadTimer = setTimeout(function() {
        // Reload page to ensure clean state on both mobile and desktop
        console.log(isDesktop ? 'üñ•Ô∏è Switching to desktop - reloading' : 'üì± Switching to mobile - reloading');
        window.location.reload();
      }, 300);
    }
  });
  
  // Check if mobile - we'll handle variant filtering on mobile, but not carousel
  const isMobileDevice = window.innerWidth < 750;
  
  if (isMobileDevice) {
    console.log('üì± Mobile detected - variant filtering only (no carousel)');
  } else {
  console.log('üîµ UNIFIED CAROUSEL + VARIANT IMAGES SCRIPT LOADED');
  }
  
  let isCarouselActive = false;
  let carouselButtons = [];
  let currentIndex = 0;
  let track = null;
  let gallery = null;
  let product = null;
  let productData = null;
  let colorImageRanges = {};
  let isTransitioning = false;
  
  // Mobile detection helper
  function isMobile() {
    return window.innerWidth < 750;
  }
  
  // Mobile variant filtering helper - updates slider counter
  function updateMobileSliderCounter() {
    if (!isMobile() || !gallery) return;
    
    const visibleSlides = getVisibleSlides();
    const counterCurrent = gallery.querySelector('.slider-counter--current');
    const counterTotal = gallery.querySelector('.slider-counter--total');
    const mediaList = gallery.querySelector('.product__media-list');
    
    if (!mediaList || visibleSlides.length === 0) return;
    
    // Update counter only if value changed to avoid unnecessary DOM updates
    if (counterTotal && counterTotal.textContent != visibleSlides.length) {
      counterTotal.textContent = visibleSlides.length;
    }
    
    // Find the currently active slide
    const activeSlide = mediaList.querySelector('.is-active, .slider__slide--active, [aria-current="true"]');
    
    // If we have an active slide, find its index in visible slides
    if (activeSlide && visibleSlides.includes(activeSlide)) {
      currentIndex = visibleSlides.indexOf(activeSlide);
    } else if (activeSlide) {
      // Active slide is hidden, find first visible slide
      const firstVisible = visibleSlides[0];
      if (firstVisible) {
        // Remove active class from all slides
        mediaList.querySelectorAll('.is-active, .slider__slide--active').forEach(slide => {
          slide.classList.remove('is-active', 'slider__slide--active');
          slide.removeAttribute('aria-current');
        });
        // Set first visible as active
        firstVisible.classList.add('is-active');
        firstVisible.setAttribute('aria-current', 'true');
        currentIndex = 0;
      }
    } else {
      // No active slide, set first visible as active
      const firstVisible = visibleSlides[0];
      if (firstVisible) {
        firstVisible.classList.add('is-active');
        firstVisible.setAttribute('aria-current', 'true');
        currentIndex = 0;
      }
    }
    
    // Update current counter only if value changed
    if (counterCurrent && counterCurrent.textContent != (currentIndex + 1)) {
      counterCurrent.textContent = currentIndex + 1;
    }
    
    console.log('üì± Mobile counter updated:', (currentIndex + 1) + '/' + visibleSlides.length);
  }
  
  function getCarouselSettings() {
    const width = window.innerWidth;
    if (width >= 1200) {
      return { slideWidth: 450, gap: 10, padding: 75 };
    } else if (width >= 990) {
      return { slideWidth: 400, gap: 10, padding: 50 };
    } else if (width >= 750) {
      return { slideWidth: 320, gap: 10, padding: 30 };
    }
    return null;
  }
  
  function getVisibleSlides() {
    if (!gallery) return [];
    const visible = Array.from(gallery.querySelectorAll('.product__media-item:not(.hidden)'));
    console.log('getVisibleSlides: Found', visible.length, 'visible slides');
    return visible;
  }
  
  function getAllSlides() {
    if (!gallery) return [];
    return Array.from(gallery.querySelectorAll('.product__media-item'));
  }
  
  // ============================================
  // VARIANT IMAGE FUNCTIONS
  // ============================================
  
  function showVariantImages(selectedColor) {
    console.log('üé® Showing images for color:', selectedColor, isMobile() ? '(mobile)' : '(desktop)');
    
    const allSlides = getAllSlides();
    console.log('Total slides:', allSlides.length);
    
    let shownCount = 0;
    let hiddenCount = 0;
    
    // On mobile, update counter immediately before filtering to prevent flash
    if (isMobile()) {
      const visibleSlides = getVisibleSlides();
      const counterTotal = gallery?.querySelector('.slider-counter--total');
      if (counterTotal && visibleSlides.length > 0) {
        // Pre-update with estimated count (will be corrected after filtering)
        counterTotal.textContent = '...';
      }
    }
    
    // Show/hide images based on selected color
    allSlides.forEach(slide => {
      const slideColor = slide.getAttribute('data-media-group');
      if (slideColor === selectedColor) {
        slide.classList.remove('hidden');
        shownCount++;
      } else {
        slide.classList.add('hidden');
        hiddenCount++;
      }
    });
    
    console.log('Variant filtering:', shownCount, 'shown,', hiddenCount, 'hidden');
    
    // On mobile, update slider counter immediately after filtering
    if (isMobile()) {
      // Use requestAnimationFrame for immediate visual update
      requestAnimationFrame(function() {
        updateMobileSliderCounter();
      });
    }
  }
  
  function setupVariantImageMapping(sectionID) {
    const handle = `products/${product.dataset.productHandle || window.location.pathname.split('/').pop()}.js`;
    
    fetch(`${window.Shopify.routes.root}${handle}`)
      .then(response => response.json())
      .then(productJson => {
        productData = productJson;
        
        const optionsToWatch = "{{ settings.selected_option_name }}".split(",");
        const colorOption = productData.options.find(option => 
          optionsToWatch.some(opt => opt.trim() === option.name)
        );
        
        if (!colorOption) {
          console.log('No color option found');
          return;
        }
        
        console.log('‚úÖ Color option found:', colorOption.name);
        
        const colorValues = colorOption.values;
        const colorImagePositions = {};
        
        // Map colors to their starting image positions
        colorValues.forEach(color => {
          const variant = productData.variants.find(v => 
            v.options[colorOption.position - 1] === color
          );
          
          if (variant && variant.featured_image) {
            colorImagePositions[color] = variant.featured_image.position;
          }
        });
        
        // Sort colors by starting image position and create ranges
        const sortedColors = Object.entries(colorImagePositions).sort((a, b) => a[1] - b[1]);
        
        sortedColors.forEach((color, index) => {
          const colorName = color[0];
          const startPos = color[1];
          const endPos = sortedColors[index + 1] ? sortedColors[index + 1][1] : null;
          colorImageRanges[colorName] = endPos ? [startPos, endPos] : [startPos];
        });
        
        // Apply data-media-group attributes to image slides
        Object.entries(colorImageRanges).forEach(([color, range]) => {
          const startPos = range[0];
          const endPos = range[1] || productData.media.length + 1;
          
          const imageIDs = productData.media
            .filter((media, index) => {
              const imagePosition = index + 1;
              return imagePosition >= startPos && imagePosition < endPos;
            })
            .map(media => media.id);
          
          // Apply data-media-group to slides
          imageIDs.forEach(mediaID => {
            const selector = `[data-media-id="${sectionID}-${mediaID}"]`;
            const mediaItems = gallery.querySelectorAll(`li${selector}`);
            
            mediaItems.forEach(item => {
              item.setAttribute('data-media-group', color);
            });
          });
        });
        
        console.log('‚úÖ Variant image mapping complete:', colorImageRanges);
        
        // Show initial variant - works on both mobile and desktop
        // Use requestAnimationFrame for immediate update
        requestAnimationFrame(function() {
              const initialColor = getSelectedColor();
              console.log('Initial color selected:', initialColor);
              console.log('Available color ranges:', Object.keys(colorImageRanges));
              
              if (initialColor && colorImageRanges[initialColor]) {
                console.log('Filtering images for color:', initialColor);
                showVariantImages(initialColor);
              } else {
                // If no color selected or color not found, show all images (fallback)
                console.log('No color selected, showing all images');
                const allSlides = getAllSlides();
                allSlides.forEach(slide => {
                  slide.classList.remove('hidden');
                });
            if (isMobile()) {
              updateMobileSliderCounter();
            }
              }
              
          // Desktop: Set up carousel after variant images are set
          if (!isMobile() && isCarouselActive) {
              const visibleBefore = getVisibleSlides().length;
              console.log('Visible slides before repositioning:', visibleBefore);
              
              repositionVisibleSlides();
              updateCarousel();
              setupButtons();
              
              const visibleAfter = getVisibleSlides().length;
              console.log('Visible slides after setup:', visibleAfter);
            }
        });
      })
      .catch(error => {
        console.error('‚ùå Error loading product data:', error);
        // On error, still try to set up carousel with all images (desktop only)
        if (!isMobile() && isCarouselActive) {
          setTimeout(function() {
            repositionVisibleSlides();
            updateCarousel();
            setupButtons();
          }, 100);
        }
        // On mobile, just update counter
        if (isMobile()) {
          updateMobileSliderCounter();
        }
      });
  }
  
  function getSelectedColor() {
    const variantSelects = document.querySelector('variant-selects');
    if (!variantSelects) {
      console.log('No variant-selects found');
      return null;
    }
    
    const currentValues = Array.from(
      variantSelects.querySelectorAll('select option[selected], fieldset input:checked')
    ).map(el => el.value);
    
    console.log('Current variant values:', currentValues);
    console.log('Available color ranges:', Object.keys(colorImageRanges));
    
    const selectedColor = currentValues.find(value => colorImageRanges.hasOwnProperty(value));
    console.log('Selected color:', selectedColor);
    
    return selectedColor;
  }
  
  // ============================================
  // CAROUSEL POSITIONING FUNCTIONS (PRESERVED FROM WORKING VERSION)
  // ============================================
  
  function repositionVisibleSlides() {
    // CRITICAL: Exit immediately if mobile - don't do anything at all
    if (isMobile()) {
      return;
    }
    
    const allSlides = getAllSlides();
    const visibleSlides = getVisibleSlides();
    const settings = getCarouselSettings();
    
    if (!settings) return;
    
    const { slideWidth, gap, padding } = settings;
    
    console.log('üìê Repositioning', visibleSlides.length, 'visible slides');
    
    // Position each visible slide consecutively using ABSOLUTE positioning
    visibleSlides.forEach((slide, index) => {
      const position = index * (slideWidth + gap);
      slide.style.position = 'absolute';
      slide.style.left = position + 'px';
      slide.style.width = slideWidth + 'px';
      
      console.log('Slide', index, 'positioned at', position + 'px');
    });
    
    // Hide all hidden slides and remove them from layout
    allSlides.forEach(slide => {
      if (slide.classList.contains('hidden')) {
        slide.style.position = 'absolute';
        slide.style.left = '-9999px'; // Move far off screen
        slide.style.opacity = '0';
        slide.style.visibility = 'hidden';
        slide.style.pointerEvents = 'none';
      }
    });
    
    // Set track height based on tallest visible slide
    const maxHeight = Math.max(...visibleSlides.map(slide => slide.offsetHeight));
    track.style.height = maxHeight + 'px';
    track.style.position = 'relative';
  }
  
  function updateCarousel() {
    // CRITICAL: Exit immediately if mobile - don't do anything at all
    if (isMobile()) {
      return;
    }

    if (!track || !gallery) {
      console.warn('Track or gallery not found');
      return;
    }
    
    const visibleSlides = getVisibleSlides();
    
    console.log('=== UPDATE CAROUSEL ===');
    console.log('Visible slides:', visibleSlides.length);
    console.log('Current index:', currentIndex);
    
    if (visibleSlides.length === 0) {
      console.warn('No visible slides found');
      return;
    }
    
    // Make sure currentIndex is within bounds
    if (currentIndex >= visibleSlides.length) {
      currentIndex = 0;
      console.log('Index out of bounds, reset to 0');
    }
    
    const settings = getCarouselSettings();
    if (!settings) return;
    
    const { slideWidth, gap } = settings;
    
    // Calculate offset based on VISIBLE slide index only
    const offset = currentIndex * (slideWidth + gap);
    
    console.log('Setting transform offset:', offset);
    
    // Smooth transition for carousel movement
    track.style.transition = isTransitioning ? 'none' : 'transform 0.5s ease';
    track.style.transform = `translateX(-${offset}px)`;
    
    // Update all slides' opacity and active state
    visibleSlides.forEach((slide, index) => {
      if (index === currentIndex) {
        slide.classList.add('carousel-active');
        slide.style.opacity = '1';
        slide.style.visibility = 'visible';
        slide.style.pointerEvents = 'auto';
      } else {
        slide.classList.remove('carousel-active');
        slide.style.opacity = '0.4';
        slide.style.visibility = 'visible';
        slide.style.pointerEvents = 'auto';
      }
    });
    
    // Update button states - use carouselButtons if set up
    const prevBtn = carouselButtons[0] || gallery.querySelector('.slider-button--prev');
    const nextBtn = carouselButtons[1] || gallery.querySelector('.slider-button--next');
    
    if (prevBtn) {
      prevBtn.disabled = currentIndex === 0;
    }
    if (nextBtn) {
      nextBtn.disabled = currentIndex >= visibleSlides.length - 1;
    }
    
    // Update counter - only if we have valid values AND we're on desktop
    // CRITICAL: Never touch counter on mobile - let Shopify's default slider handle it
    if (!isMobile() && visibleSlides.length > 0) {
      const counterCurrent = gallery.querySelector('.slider-counter--current');
      const counterTotal = gallery.querySelector('.slider-counter--total');
      if (counterCurrent) {
        counterCurrent.textContent = currentIndex + 1;
      }
      if (counterTotal) {
        counterTotal.textContent = visibleSlides.length;
      }
    }
    
    console.log('Counter: ' + (currentIndex + 1) + '/' + visibleSlides.length);
    console.log('======================\n');
  }
  
  function setupButtons() {
    // CRITICAL: Exit immediately if mobile - don't do anything at all
    if (isMobile()) {
      return;
    }
    
    if (!gallery) return;
    
    // Find buttons in media-gallery (desktop carousel buttons)
    const prevBtn = gallery.querySelector('.slider-button--prev');
    const nextBtn = gallery.querySelector('.slider-button--next');
    
    console.log('setupButtons: Looking for buttons', { prevBtn: !!prevBtn, nextBtn: !!nextBtn });
    
    if (!prevBtn || !nextBtn) {
      console.log('setupButtons: Buttons not found, retrying...');
      setTimeout(setupButtons, 100);
      return;
    }
    
    // Check if already set up
    if (carouselButtons.length > 0) {
      console.log('setupButtons: Buttons already set up');
      return;
    }
    
    console.log('setupButtons: Cloning and setting up buttons');
    
    // Clone buttons to remove old event listeners (DESKTOP ONLY)
    const newPrevBtn = prevBtn.cloneNode(true);
    const newNextBtn = nextBtn.cloneNode(true);
    prevBtn.parentNode.replaceChild(newPrevBtn, prevBtn);
    nextBtn.parentNode.replaceChild(newNextBtn, nextBtn);
    
    carouselButtons = [newPrevBtn, newNextBtn];
    
    newPrevBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      console.log('‚¨ÖÔ∏è PREV CLICKED, currentIndex:', currentIndex);
      if (currentIndex > 0) {
        currentIndex--;
        updateCarousel();
      }
    }, { capture: true });
    
    newNextBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      const visibleSlides = getVisibleSlides();
      console.log('‚û°Ô∏è NEXT CLICKED, currentIndex:', currentIndex, 'max:', visibleSlides.length - 1);
      if (currentIndex < visibleSlides.length - 1) {
        currentIndex++;
        updateCarousel();
      }
    }, { capture: true });
    
    // Update button states
    const visibleSlides = getVisibleSlides();
    newPrevBtn.disabled = currentIndex === 0;
    newNextBtn.disabled = currentIndex >= visibleSlides.length - 1;
    
    console.log('‚úÖ Buttons set up:', {
      prevDisabled: newPrevBtn.disabled,
      nextDisabled: newNextBtn.disabled,
      currentIndex: currentIndex,
      visibleSlides: visibleSlides.length
    });
  }
  
  function refreshCarousel(selectedColor) {
    console.log('\nüîÑ REFRESH for color:', selectedColor, isMobile() ? '(mobile)' : '(desktop)');
    
    // Reset to first slide
    currentIndex = 0;
    
    // Show correct variant images (works on both mobile and desktop)
    if (selectedColor) {
      showVariantImages(selectedColor);
    }
    
    // Desktop: Reposition and update carousel
    if (!isMobile() && isCarouselActive) {
      // Disable transition during repositioning
      isTransitioning = true;
    
    // Reposition visible slides to be consecutive
    repositionVisibleSlides();
    
    // Small delay to ensure DOM is updated
    setTimeout(function() {
      isTransitioning = false;
      updateCarousel();
      // Re-setup buttons to ensure they work
      setupButtons();
    }, 50);
    }
    
    // Mobile: Just update counter and reset slider position
    if (isMobile()) {
      const visibleSlides = getVisibleSlides();
      if (visibleSlides.length > 0) {
        // Remove active class from all slides
        const allSlides = getAllSlides();
        allSlides.forEach(slide => {
          slide.classList.remove('is-active', 'slider__slide--active');
          slide.removeAttribute('aria-current');
        });
        
        // Set first visible slide as active
        const firstVisible = visibleSlides[0];
        firstVisible.classList.add('is-active');
        firstVisible.setAttribute('aria-current', 'true');
        currentIndex = 0;
        
        // Try to trigger slider to go to first visible slide
        const sliderComponent = gallery?.querySelector('slider-component');
        if (sliderComponent && firstVisible) {
          // Find the index of first visible slide in all slides (including hidden)
          const allSlidesArray = Array.from(gallery.querySelectorAll('.product__media-item'));
          const slideIndex = allSlidesArray.indexOf(firstVisible);
          if (slideIndex >= 0) {
            // Use slider's internal method if available
            if (sliderComponent.goToSlide) {
              sliderComponent.goToSlide(slideIndex);
            } else {
              // Fallback: scroll into view
              firstVisible.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }
          }
        }
      }
      // Update counter after resetting position
      updateMobileSliderCounter();
    }
  }
  
  // ============================================
  // INITIALIZATION
  // ============================================
  
  function init() {
    const mobile = isMobile();
    console.log(mobile ? 'üöÄ INITIALIZING VARIANT FILTERING (MOBILE)' : 'üöÄ INITIALIZING UNIFIED CAROUSEL + VARIANT IMAGES (DESKTOP)');
    
    product = document.querySelector('.product--carousel');
    if (!product) {
      console.log('No .product--carousel found');
      return;
    }
    
    gallery = product.querySelector('media-gallery');
    if (!gallery) {
      console.log('No media-gallery found');
      return;
    }
    
    track = gallery.querySelector('.product__media-list');
    const allSlides = getAllSlides();
    
    if (!track || allSlides.length === 0) {
      console.log('No track or slides found');
      return;
    }
    
    console.log('Total slides found:', allSlides.length);
    
    // Only activate carousel on desktop
    if (!mobile) {
      isCarouselActive = true;
    }
      currentIndex = 0;
      
    const sectionID = product.closest('[data-section]')?.dataset.section || 'main';
    
    // On mobile, immediately override counter to prevent showing wrong count
    if (mobile) {
      const counterTotal = gallery.querySelector('.slider-counter--total');
      const counterCurrent = gallery.querySelector('.slider-counter--current');
      if (counterTotal) {
        counterTotal.textContent = '...';
      }
      if (counterCurrent) {
        counterCurrent.textContent = '1';
      }
    }
    
    // Ensure all images are visible first, then hide them based on variant selection
    allSlides.forEach(slide => {
      slide.classList.remove('hidden');
    });
    
    // Setup variant image mapping FIRST (works on both mobile and desktop)
    setupVariantImageMapping(sectionID);
    
    // Desktop: Fallback carousel setup if variant mapping takes too long
    if (!mobile) {
      const settings = getCarouselSettings();
      if (!settings) {
        console.log('No carousel settings for this screen size');
        return;
      }
      
      let fallbackSetup = false;
      setTimeout(function() {
        console.log('Fallback: Checking if carousel needs setup');
        if (!isMobile() && isCarouselActive && !fallbackSetup) {
          if (carouselButtons.length === 0) {
            console.log('Fallback: Setting up carousel with all images');
            fallbackSetup = true;
            const allSlides = getAllSlides();
            allSlides.forEach(slide => {
              slide.classList.remove('hidden');
            });
            repositionVisibleSlides();
            updateCarousel();
            setupButtons();
          } else {
            console.log('Carousel already set up by variant mapping');
          }
        }
      }, 1500);
    }
    
    // Listen for variant changes - works on both mobile and desktop
    const productSection = document.querySelector('.product-variant-id, variant-selects');
    if (productSection) {
      productSection.addEventListener('change', function(e) {
        console.log('‚öôÔ∏è Variant changed');
        const selectedColor = getSelectedColor();
        if (selectedColor) {
            refreshCarousel(selectedColor);
          }
      });
    }
    
    // Mobile: Track and override slider counter (simplified approach)
    if (isMobile() && gallery) {
      const sliderComponent = gallery.querySelector('slider-component');
      const mediaList = gallery.querySelector('.product__media-list');
      const counterTotal = gallery.querySelector('.slider-counter--total');
      const counterCurrent = gallery.querySelector('.slider-counter--current');
      
      if (sliderComponent && mediaList && counterTotal) {
        let isOurUpdate = false; // Flag to prevent infinite loops
        
        // Function to update counter based on visible slides
        const updateCounter = function() {
          if (isOurUpdate) return; // Don't update if we're in the middle of our own update
          
          const visibleSlides = getVisibleSlides();
          if (visibleSlides.length === 0) return;
          
          // Get Shopify's current counter value (which counts ALL slides)
          let shopifyCurrentSlide = 1;
          if (counterCurrent) {
            shopifyCurrentSlide = parseInt(counterCurrent.textContent) || 1;
          }
          
          // Convert Shopify's slide number (all slides) to visible slide index
          // Count visible slides up to Shopify's current position
          const allSlides = Array.from(mediaList.querySelectorAll('.product__media-item'));
          let visibleCount = 0;
          let foundIndex = 0;
          
          for (let i = 0; i < allSlides.length; i++) {
            if (!allSlides[i].classList.contains('hidden')) {
              visibleCount++;
              // If we've reached Shopify's current slide position, this is our index
              if (visibleCount === shopifyCurrentSlide) {
                foundIndex = visibleCount - 1; // Convert to 0-based index
                break;
              }
            }
          }
          
          // If we didn't find it (Shopify's counter might be ahead), use the last visible
          if (foundIndex === 0 && visibleCount < shopifyCurrentSlide) {
            foundIndex = visibleSlides.length - 1;
          }
          
          // Ensure index is within bounds
          if (foundIndex >= visibleSlides.length) {
            foundIndex = visibleSlides.length - 1;
          }
          if (foundIndex < 0) {
            foundIndex = 0;
          }
          
          currentIndex = foundIndex;
          
          // Override Shopify's counter immediately
          const correctTotal = visibleSlides.length;
          const correctCurrent = currentIndex + 1;
          
          // Check if counter needs updating
          const currentTotalValue = counterTotal ? parseInt(counterTotal.textContent) : 0;
          const currentCurrentValue = counterCurrent ? parseInt(counterCurrent.textContent) : 0;
          
          // Only update if values are wrong
          if (currentTotalValue !== correctTotal || currentCurrentValue !== correctCurrent) {
            isOurUpdate = true; // Set flag before updating
            
            // Update counter
            if (counterTotal) {
              counterTotal.textContent = correctTotal;
            }
            if (counterCurrent) {
              counterCurrent.textContent = correctCurrent;
            }
            
            // Reset flag after a brief moment
            setTimeout(function() {
              isOurUpdate = false;
            }, 10);
            
            console.log('üì± Counter corrected:', correctCurrent + '/' + correctTotal, 
                       'Shopify had:', shopifyCurrentSlide, 
                       'Visible index:', currentIndex);
          }
        };
        
        // Use MutationObserver to watch for slide changes only
        const slideObserver = new MutationObserver(function(mutations) {
          let shouldUpdate = false;
          mutations.forEach(function(mutation) {
            // Only update on slide class changes
            if (mutation.type === 'attributes' && 
                (mutation.attributeName === 'class' || mutation.attributeName === 'aria-current') &&
                mutation.target.classList.contains('product__media-item')) {
              shouldUpdate = true;
            }
          });
          if (shouldUpdate) {
            // Small delay to let Shopify finish its update first
            setTimeout(updateCounter, 50);
          }
        });
        
        // Observe the media list for slide changes
        slideObserver.observe(mediaList, {
          attributes: true,
          attributeFilter: ['class', 'aria-current'],
          subtree: true,
          childList: false
        });
        
        // Listen for click events on slider buttons
        const prevBtn = gallery.querySelector('.slider-button--prev');
        const nextBtn = gallery.querySelector('.slider-button--next');
        
        const handleButtonClick = function() {
          // Update after a short delay to let slide change first
          setTimeout(updateCounter, 100);
          setTimeout(updateCounter, 200);
        };
        
        if (prevBtn) {
          prevBtn.addEventListener('click', handleButtonClick, true);
        }
        
        if (nextBtn) {
          nextBtn.addEventListener('click', handleButtonClick, true);
        }
        
        // Listen for touch/swipe events
        let touchStartX = 0;
        mediaList.addEventListener('touchstart', function(e) {
          touchStartX = e.touches[0].clientX;
        }, { passive: true });
        
        mediaList.addEventListener('touchend', function(e) {
          const touchEndX = e.changedTouches[0].clientX;
          const diff = touchStartX - touchEndX;
          if (Math.abs(diff) > 50) { // Swipe detected
            setTimeout(updateCounter, 150);
          }
        }, { passive: true });
        
        // Watch counter elements for Shopify's updates and immediately correct them
        const counterObserver = new MutationObserver(function(mutations) {
          if (isOurUpdate) return; // Ignore our own updates
          
          let counterChanged = false;
          mutations.forEach(function(mutation) {
            if (mutation.type === 'characterData' || mutation.type === 'childList') {
              const target = mutation.target;
              if (target === counterTotal || target === counterCurrent ||
                  (counterTotal && counterTotal.contains(target)) ||
                  (counterCurrent && counterCurrent.contains(target)) ||
                  (target.nodeType === 3 && target.parentElement &&
                   (target.parentElement === counterTotal || target.parentElement === counterCurrent))) {
                counterChanged = true;
              }
            }
          });
          
          if (counterChanged) {
            // Shopify updated the counter, correct it immediately
            requestAnimationFrame(updateCounter);
          }
        });
        
        // Observe counter elements
        if (counterTotal) {
          counterObserver.observe(counterTotal, {
            childList: true,
            characterData: true,
            subtree: true
          });
        }
        if (counterCurrent) {
          counterObserver.observe(counterCurrent, {
            childList: true,
            characterData: true,
            subtree: true
          });
        }
        
        // Light polling as backup to catch any missed updates
        let lastCounterValue = null;
        setInterval(function() {
          const currentCounterValue = counterTotal ? counterTotal.textContent + '/' + (counterCurrent ? counterCurrent.textContent : '') : null;
          if (currentCounterValue !== lastCounterValue) {
            lastCounterValue = currentCounterValue;
            updateCounter();
          }
        }, 200);
      }
    }
    
    // Update carousel on resize within desktop range (desktop only)
    let resizeTimer;
    window.addEventListener('resize', function() {
      if (!isMobile() && isCarouselActive) {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(function() {
          console.log('üìè Window resized, updating carousel');
          repositionVisibleSlides();
          updateCarousel();
        }, 100);
      } else if (isMobile()) {
        // On mobile, just update counter on resize
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(function() {
          updateMobileSliderCounter();
        }, 100);
      }
    });
    
    console.log('‚úÖ Initialization complete\n');
  }
  
  // Run on both mobile and desktop (variant filtering works on both)
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      setTimeout(init, 200);
    });
  } else {
    setTimeout(init, 200);
  }
  
  // Note: Resize listener for page reload is set up at the very top of the script
  // before the mobile check, so it works even when starting on mobile
})();

